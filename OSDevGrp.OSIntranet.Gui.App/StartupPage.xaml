<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OSDevGrp.OSIntranet.Gui.App.Core"
             x:DataType="local:StartupViewModel"
             x:Class="OSDevGrp.OSIntranet.Gui.App.StartupPage"
             Title="Velkommen">

    <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Velkommen til OS Intranet App" Style="{StaticResource Header1Style}" />
            <ActivityIndicator IsRunning="{Binding Initializing, Mode=OneWay}" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>